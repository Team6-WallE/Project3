<?xml version="1.0"?>

<robot name="my_robot" xmlns:xacro="http://ros.org/wiki/xacro">
    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>
    
    <material name="red">
        <color rgba="0.8 0 0 1" />
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Base_Chasis.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0.4" rpy="0 0 0" />
            <material name="grey" />
        </visual> 
        <collision>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Base_Chasis.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0.4" rpy="0 0 0" />
        </collision>
    </link>

 
    <link name="wheel1_link">
        <inertial>
                <origin xyz="0 0 0" />
                <mass value="0.5" />
                <inertia ixx="0.01055" ixy="0" ixz="0" iyy="0.00075" iyz="0" izz="0.01055" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>
    
    <joint name="joint1" type="continuous">
        <parent link="base_link" />
        <child link="wheel1_link" />
        <origin xyz="0.8 2.0 0.9" rpy="0 0 1.57" />
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="1000.0" velocity="1.0" lower="-3.14" upper="3.14" />
    </joint>
 
     <link name="wheel2_link">
        <inertial>
                <origin xyz="0 0 0" />
                <mass value="0.5" />
                <inertia ixx="0.01055" ixy="0" ixz="0" iyy="0.00075" iyz="0" izz="0.01055" />
        </inertial>       
        <visual>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>
    
    <joint name="joint2" type="continuous">
        <parent link="base_link" />
        <child link="wheel2_link" />
        <origin xyz="6.0 2.0 0.9" rpy="0 0 1.57" />
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="1000.0" velocity="1.0" lower="-3.14" upper="3.14" />
    </joint>
    
    
    <link name="wheel3_link">
        <inertial>
                <origin xyz="0 0 0" />
                <mass value="0.5" />
                <inertia ixx="0.01055" ixy="0" ixz="0" iyy="0.00075" iyz="0" izz="0.01055" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>
    
    <joint name="joint3" type="continuous">
        <parent link="base_link" />
        <child link="wheel3_link" />
        <origin xyz="0.8 5.0 0.9" rpy="0 0 1.57" />
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="1000.0" velocity="1.0" lower="-3.14" upper="3.14" />
    </joint>
 
     <link name="wheel4_link">
        <inertial>
                <origin xyz="0 0 0" />
                <mass value="0.5" />
                <inertia ixx="0.01055" ixy="0" ixz="0" iyy="0.00075" iyz="0" izz="0.01055" />
        </inertial>
        <visual>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <mesh filename="file:$(find project3_description)/models/Robot_Wheel.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>
    
    <joint name="joint4" type="continuous">
        <parent link="base_link" />
        <child link="wheel4_link" />
        <origin xyz="6.0 5.0 0.9" rpy="0 0 1.57" />
        <axis xyz="0 1 0" rpy="0 0 0" />
        <limit effort="1000.0" velocity="1.0" lower="-3.14" upper="3.14" />
    </joint>   

    <link name="imu_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <box size="0.1 0.1 0.1"/>
            </geometry>
        </collision>

        <!-- <inertial>
            <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
            <mass value="0.1"/>
            <inertia ixx="0.000167" ixy="0.0" ixz="0.0" iyy="0.000167" iyz="0.0" izz="0.000167"/>
        </inertial> -->
    </link>


    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="2.8 3.0 1.5"/>
    </joint>

    <gazebo reference="imu_link">
        <sensor name="imu_sensor" type="imu">
            <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
                <ros>
                    <namespace>/demo</namespace>
                    <remapping>~/out:=imu</remapping>
                </ros>
                <initial_orientation_as_reference>false</initial_orientation_as_reference>
                </plugin>
                <always_on>true</always_on>
                <update_rate>100</update_rate>
                <visualize>true</visualize>
                <imu>
                <angular_velocity>
                    <x>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>2e-4</stddev>
                            <bias_mean>0.0000075</bias_mean>
                            <bias_stddev>0.0000008</bias_stddev>
                        </noise>
                    </x>
                    <y>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>2e-4</stddev>
                            <bias_mean>0.0000075</bias_mean>
                            <bias_stddev>0.0000008</bias_stddev>
                        </noise>
                    </y>
                    <z>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>2e-4</stddev>
                            <bias_mean>0.0000075</bias_mean>
                            <bias_stddev>0.0000008</bias_stddev>
                        </noise>
                    </z>
                </angular_velocity>
                <linear_acceleration>
                    <x>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>1.7e-2</stddev>
                            <bias_mean>0.1</bias_mean>
                            <bias_stddev>0.001</bias_stddev>
                        </noise>
                    </x>
                    <y>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>1.7e-2</stddev>
                            <bias_mean>0.1</bias_mean>
                            <bias_stddev>0.001</bias_stddev>
                        </noise>
                    </y>
                    <z>
                        <noise type="gaussian">
                            <mean>0.0</mean>
                            <stddev>1.7e-2</stddev>
                            <bias_mean>0.1</bias_mean>
                            <bias_stddev>0.001</bias_stddev>
                        </noise>
                    </z>
                </linear_acceleration>
            </imu>
        </sensor>
    </gazebo>
    
